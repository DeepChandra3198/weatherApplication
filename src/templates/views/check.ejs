<body>
    <!-- navbar defined here -->
    <%- include('../partials/navbar') %>
<!-- weather form section -->
<div class="container-fluid mt-0">
    <div class="row">
        <div class="col-md-8 col-12 mx-auto">
            <div class="row">
                <div class="col-md-10 col-12 hero-text order-md-0 order-1 mt-0">
                    <section class="vh-100">
                        <div class="container py-5 h-100">
                            <div class="row d-flex justify-content-center align-items-center h-100">
                                
                                <h1>Check Current Weather Here...</h1>
                                <form action="/response" method="post">
                                    <div class="input-group mb-3">
                                        <input id="searchbar" type="search" class="form-control rounded" name="city" placeholder="City"/>
                                        <button id="cbtn" type="submit" class="btn btn-primary">search</button>
                                    </div>
                                </form>
                                
                                
                                    <div id="card" class="card shadow border-0">
                                        <div class="card-body ">
                                            <h4 id="cardC" class="mb-1 fw-normal"> City, Country </h4>
                                            <p id="cardC" class="mb-2">Current temperature: <strong> Temprature </strong></p>
                                            <p id="cardC" >Feels like: <strong id="cardC"> Feel Like</strong></p>
                                            <p id="cardC">Max: <strong id="cardC">max°C</strong>, Min: <strong id="cardC"> min°C</strong></p>
                                            <div class="d-flex flex-row align-items-center">
                                                <p class="mb-0 me-4" id="cardC">cloudy</p>
                                                <i class="fas fa-cloud fa-3x" style="color: #eee;"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>


