    <title>check weather</title>
     <!-- Bootstrap CSS -->
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="your-integrity-hash-here" crossorigin="anonymous"></head>
     <link rel="stylesheet" href="css/style.css">
